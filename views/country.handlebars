<div class="container center-align padding">
    <div class="row">
        <div class="col s12">
            <div class="card horizontal">
                <div class="card-stacked">
                    <div class="card-content left-align">
                        <h3 class="header">{{countryData.countryName}}</h3>
                        <p>Capital City: {{countryData.capital}}</p>
                        <p>Language: {{countryData.language}}</p>
                        <p>Currency: {{countryData.currency}} {{countryData.currencySymbol}}</p>
                        <p>Population: {{countryData.population}}</p>
                    </div>
                </div>
                <div class="card-image">
                    <img src="{{countryData.flag}}">
                </div>
            </div>
        </div>
    </div>
    {{#each post}}
    
        <div class="row">
        <div class="col s12">
            <div class="card horizontal">
                <div class="card-stacked">
                    <div class="card-content left-align">
                        <h5>{{title}}</h5>
                        <p>{{body}}</p>
                        <p>Category: {{category}}</p>
                        <p>Posted by: {{User.full_name}} </p>
                        <p>
                            {{#compare User.numOfPosts '<' 5}}
                                <img src="/assets/images/turtle.png" alt="Turle Badge"
                                height="50" width="50">
                                {{else}}
                                    {{#compare User.numOfPosts '<' 10}}
                                        <img src="/assets/images/moose.png" alt="Moose Badge"
                                        height="50" width="50">
                                         {{else}}
                                            {{#compare User.numOfPosts '<' 25}}
                                                <img src="/assets/images/muffin.png" alt="Muffin Badge"
                                                height="50" width="50">
                                                {{else}}
                                                    {{#compare User.numOfPosts '>=' 25}}
                                                        <img src="/assets/images/saddle.png" alt="Saddle Badge"
                                                        height="50" width="50">
                                                {{/compare}}
                                            {{/compare}}
                                    {{/compare}}
                                
                            {{/compare}}
                        </p>
                        <p style="font-size:10px;">Post created at: {{createdAt}}</p>
                            
                            
                                 
                            
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>
<script src="/assets/index.js"></script>


