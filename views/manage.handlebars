<div class="container center-align">
    <div class="row">
        <div class="center-align">
            <h3>Choose a User to Manage Posts</h3>
            <!-- Dropdown Trigger -->
            <a class='dropdown-trigger btn btn-large blue darken-4' href='#' data-target='dropdown1'>Select your name!</a>

            <!-- Dropdown Structure -->
            <ul id='dropdown1' class='dropdown-content'>
                {{#each users}}
                <li><a href="/manage/user/{{this.id}}">{{this.full_name}}</a></li>
                {{/each}}
            </ul>
        </div>
    </div>


    <!--This Div will contain the dynamically populated Post Cards-->
    {{#each post}}
        <div class="row">
            <div class="col s12">
                <div class="card light-grey darken-1">
                    <div class="card-content">
                        <h5>{{title}}</h5>
                        <p>{{createdAt}}</p>
                        <p>{{category}}</p>
                        <p>{{body}}</p>
                    </div>
                    <div class="card-action">
                    <a class="btn waves-effect waves-light blue darken-4" id="updateBtn">Update</a>
                    <a class="btn waves-effect waves-light blue darken-4" data-id="{{id}}" id="deleteBtn">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
</div>
<script src="/assets/index.js"></script>


